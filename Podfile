    pod 'Kingfisher', '~> 2.2'      # Kingfisher图片缓存库
    pod 'SwiftCSV'                  # Swift语言CSV文件处理
    pod 'MJRefresh'                 # 上拉\下拉刷新
    pod 'PKHUD'                     # HUD
    pod 'AVOSCloud'                 # LeanCloud数据存储、短信、云引擎调用等基础服务模块
    pod 'ReachabilitySwift'         # 可达性检查
    pod 'Fabric'                    # Twitter Fabric平台
    pod 'Crashlytics'               # Fabric崩溃数据收集
    pod 'R.swift'
#    pod 'AVOSCloudCrashReporting'  # LeanCloud错误报告模块
#    pod 'LeanCloudFeedback'
